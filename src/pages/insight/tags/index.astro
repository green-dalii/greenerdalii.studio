---
import BaseLayout from "../../../layouts/BaseLayout.astro";
const allPosts = await Astro.glob("../*.md");
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<BaseLayout>
  <div>
    {tags.map((tag) => (
        <p><a href={`./tags/${tag}`}>{tag}</a></p>
      ))}
  </div>
</BaseLayout>
