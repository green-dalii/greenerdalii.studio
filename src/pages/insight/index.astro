---
import "@fontsource/inter/variable.css";
import Head from "~/components/in-head.astro";
import Footer from "~/components/Footer.astro";
import Header from "~/components/header-fixed.astro";
import ContentSection from "~/components/content-section.astro";
const allPosts = await Astro.glob("./*.md");
import "~/styles/index.css";
---

<!DOCTYPE html>
<html lang="zh-CN" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <Head />
  </head>
  <body
    class="h-full overflow-x-hidden bg-default text-default text-base selection:bg-primary selection:text-white"
  >
    <Header />
    <div class="mt-20 sm:mt-10 sm:pb-32 sm:pt-10">
      <div class="sm:pb-30 mx-auto max-w-7xl px-6 pt-0 sm:px-2">
        <div class="container mx-auto px-0 sm:px-5 sm:pb-24">
          <div class="breadcrumbs text-sm">
            <ul>
              <li><a href="/">Home</a></li>
              <li>Insight</li>
            </ul>
          </div>
        </div>
      </div>
      <ContentSection title="品牌洞察" subtitle="Our Insights" id="insight">
        <Fragment slot="description">
          Greener-Dalii Studio深入研究市场趋势，精准剖析消费者心理，分享独到的品牌见解和前沿设计思考。跟随我们的视角，一起探索品牌生命力的源泉与无限可能性。
        </Fragment>
        <Fragment slot="description-below">
          Greener-Dalii Studio delves deeply into market trends, meticulously dissects
          consumer psychology, and shares profound brand perspectives and cutting-edge
          design philosophies. Join us on a journey to explore the wellspring of brand
          vitality and endless possibilities.
        </Fragment>
        <Fragment slot="content">
          <div class="flex scroll-mt-24 flex-col items-center">
            <ul>
              {
                allPosts.map((post) => (
                  <li>
                    <a href={post.url}>{post.frontmatter.title}</a>
                  </li>
                ))
              }
            </ul>
          </div>
        </Fragment>
      </ContentSection>
    </div>
    <Footer />
  </body>
</html>