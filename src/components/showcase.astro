---
import ContentSection from "./content-section.astro";
import ShowcaseCard from "../components/showcase-card.astro";
import Btn from "./button.astro";
import { Icon } from "astro-icon/components";
import { getShowcase } from "../data/showcase";

const sites = await getShowcase();
---

<section id="showcase" class="sm:py-30 mx-auto max-w-7xl px-6 sm:px-2">
  <div
    class="container relative mx-auto flex flex-col sm:grid sm:grid-cols-5 py-32 sm:py-48 sm:px-5"
  >
    <div class="absolute py-32 sm:col-span-3 -bottom-80 md:-bottom-52 md:right-1/2">
      <Icon
        name="MeditatingDoodle"
        class="h-96 w-96 sm:h-[56rem] sm:w-[56rem]"
      />
    </div>
    <div class=" sm:col-start-4 sm:col-span-2">
      <div class="mb-2 flex flex-col">
        <!-- <h2 class="title-font text-left font-black text-6xl sm:text-5xl">Greener-Dalii Studio</h2> -->
        <Icon name="wordmark" class="w-96 h-auto mb-2" />
        <h3 class="text-left font-bold text-2xl">
          格润达理工作室
        </h3>
      </div>
      <div class="flex w-full flex-col text-left mt-10">
        <p class="break-words leading-loose text-sm">
          我们致力于通过创意与技术来融合商业性、艺术性和理性构思
        </p>
        <p class="my-2 break-words leading-relaxed text-xs">
          We are committed to fusing commercial, artistic and rational ideas through creativity and technology.
        </p>
      </div>
    </div>
  </div>
  <div class="container mx-auto px-0 py-12 sm:px-5 sm:py-24">
    <div class="max-w-7xl space-y-2">
      <div class="grid grid-cols-1 gap-4 lg:grid-cols-3">
        {sites.map((site) => <ShowcaseCard site={site} />)}
      </div>
    </div>
    <div class="mt-10 text-center">
      <Btn btnText="See More 👀" btnAltText="看看更多 👀" url="/work" />
    </div>
  </div>
</section>
