---
import { Picture } from "@astrojs/image/components";
import { Icon } from "astro-icon";
import logoDot from "../assets/logo_dot.png";
import HeroImage from "../components/hero-image.astro";
import Starfield from "../components/starfield.astro";
// import GitHubCorner from "./github-corner.astro";

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full bg-black">
  <Starfield />
  <!-- <GitHubCorner /> -->
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div>
  <div class="flex flex-col items-center justify-center h-screen">
    <!-- Splash Text & Pic -->
    <div class="relative grid h-full place-items-center sm:grid-cols-2">
      <h2
        class="flex flex-col gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end"
      >
        <!-- <Icon name="logomark" class="h-24 text-white md:h-32" /> -->
        <div
          class="text-white text-center font-extrabold tracking-tighter text-8xl"
        >
          Bring Brand Desgin
          <br /> To Everyone
        </div>
        <div class="text-white text-center font-extrabold tracking-tighter text-3xl">
          敬请期待...
        </div>
      </h2>
      <div
        id="splashLogo"
        class="w-2/3 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start"
      >
        <Picture
          class="object-cover w-full h-full"
          src={logoDot}
          widths={widths}
          sizes={sizes}
          loading="eager"
          alt="A floating Greener-Dalii Studio's logo dot edition"
        />
      </div>
    </div>
    <!-- Arrow-Down -->
    <div id="arrow-down" class="h-16 w-16 border-current p-3 text-white z-10 m-10">
      <Icon name="ic:baseline-keyboard-double-arrow-down"/>
    </div>
  </div>
  
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 20px, 0);
    }
  }

  /* #splashLogo {
    animation: float linear 2.5s infinite alternate;
  } */

  #arrow-down {
    animation: float ease-in-out 1.5s infinite alternate;
  }
  @media (prefers-reduced-motion: reduce) {
    #splashLogo {
      @apply animate-none;
    }

    :global(#starfield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>
