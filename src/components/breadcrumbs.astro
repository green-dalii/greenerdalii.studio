---
const { urlList, isWork = "No" } = Astro.props;
import { Debug } from "astro:components";
---

<Debug {urlList}/>
<div class="sm:pb-30 mx-auto max-w-7xl px-6 pt-0 sm:px-2">
    <div class="container mx-auto px-0 sm:px-5 sm:pb-24">
        <div class="breadcrumbs text-sm">
            <ul>
                {
                    urlList.map((url, index) => (
                        <li>
                            {url === "" ? (
                                <a href="/">Home</a>
                            ) : index === urlList.length - 1 ? (
                                isWork !== "No" ? (
                                    isWork
                                ) : (
                                    url.charAt(0).toUpperCase() + url.slice(1)
                                )
                            ) : (
                                <a href={`/${url}`}>
                                    {url.charAt(0).toUpperCase() + url.slice(1)}
                                </a>
                            )}
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</div>
